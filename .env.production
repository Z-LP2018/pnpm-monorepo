# ============================================
# 生产环境配置模板
# 复制此文件为 .env.production 并填写实际值
# ============================================

# ========== 服务配置 ==========
NODE_ENV=production
PORT=3000

# ========== 数据库配置 ==========
# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=gu_lu_gu_lu

# MySQL (Prisma)
MYSQL_CONFIG_URL=mysql://user:password@postgres:5432/gu_lu_gu_lu?schema=public

# MongoDB
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=your_mongo_password
MONGO_DB=gu_lu_gu_lu

# ========== Redis 配置 ==========
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Redis 中间件配置（微服务通信）
REDIS_MIDDLEWARE_PORT=6379
REDIS_MIDDLEWARE_DB=0
REDIS_MIDDLEWARE_PASSWORD=your_redis_password

# ========== JWT 配置 ==========
JWT_SECRET=your_jwt_secret_key_here
JWT_TOKEN_EXPIRES_IN=15m

# ========== 微服务端口配置 ==========
# API Gateway
API_GATEWAY_PORT=3000

# File Service
FILE_SERVICE_PORT=3001
FILE_CONNECT_PORT=3001

# Message Service
MESSAGE_SERVICE_PORT=3002
MESSAGE_CONNECT_PORT=3002

# ========== Nacos 配置 ==========
NACOS_SERVER=nacos-server:8848
NACOS_NAMESPACE=production
NACOS_GROUP=DEFAULT_GROUP
SERVICE_NAME=api-gateway

# ========== MinIO 配置 ==========
MINIO_END_POINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key

